{
	"name": "celosiajs-boilerplate",
	"version": "1.0.0",
	"description": "CelosiaJS boilerplate",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "npm run clean:build && tsc && tsc-alias",
		"prod": "cross-env NODE_ENV=production node --env-file=.env ./build/index.js",
		"clean:build": "rimraf ./build",
		"clean:logs": "rimraf ./Logs",
		"clean": "concurrently \"npm run clean:build\" \"npm run clean:logs\"",
		"start": "cross-env NODE_ENV=development tsx watch --env-file=.env ./src/index.ts",
		"lint:build": "tsc --project tsconfig.eslint.json",
		"lint:check": "eslint --cache",
		"lint:fix": "eslint --cache --fix",
		"prettier:check": "prettier -c \"./**/*.{ts,json,md,prettierrc}\"",
		"prettier:fix": "prettier -w \"./**/*.{ts,json,md,prettierrc}\"",
		"types:check": "tsc --noEmit",
		"check": "npm run lint:check && npm run prettier:check && npm run types:check",
		"fix": "npm run lint:fix && npm run prettier:fix && npm run types:check",
		"prepare": "npm run lint:build"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/kennarddh/celosiajs-boilerplate.git"
	},
	"author": "kennarddh",
	"license": "MIT",
	"dependencies": {
		"@celosiajs/core": "^0.0.1-alpha.4",
		"@celosiajs/extensions": "^0.0.1-alpha.4",
		"@celosiajs/logging": "^0.0.1-alpha.4",
		"@prisma/client": "^5.14.0",
		"argon2": "^0.40.3",
		"cors": "^2.8.5",
		"jsonwebtoken": "^9.0.2",
		"rate-limiter-flexible": "^5.0.3",
		"winston": "^3.13.0",
		"winston-daily-rotate-file": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.3.0",
		"@trivago/prettier-plugin-sort-imports": "^4.3.0",
		"@types/cors": "^2.8.17",
		"@types/eslint": "^8.56.10",
		"@types/eslint__js": "^8.42.3",
		"@types/eslint-plugin-security": "^3.0.0",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/node": "^20.12.13",
		"@typescript-eslint/utils": "^8.0.0-alpha.59",
		"concurrently": "^8.2.2",
		"cross-env": "^7.0.3",
		"eslint": "^9.3.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-security": "^3.0.0",
		"globals": "^15.3.0",
		"prettier": "^3.2.5",
		"prisma": "^5.14.0",
		"rimraf": "^5.0.7",
		"tsc-alias": "^1.8.10",
		"tsx": "^4.11.0",
		"typescript": "^5.4.5",
		"typescript-eslint": "^8.0.0-alpha.59"
	}
}
